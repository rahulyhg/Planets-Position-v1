<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:stretchColumns="1">

	<TableRow android:layout_width="wrap_content"
		android:layout_height="wrap_content">
		<TextView android:id="@+id/dataText" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="Planet:" />
	</TableRow>

	<TableRow android:layout_width="wrap_content"
		android:paddingTop="5dip" android:paddingBottom="5dip"
		android:layout_height="wrap_content">
		<TextView android:id="@+id/pPlanetName" android:textSize="24sp"
			android:layout_weight="1" android:layout_width="fill_parent"
			android:layout_height="35dip" android:gravity="center"
			android:background="@color/background_color2" android:textColor="@color/text_color" />
	</TableRow>

	<TableRow android:layout_width="wrap_content"
		android:layout_height="wrap_content">
		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="fill_parent" android:layout_weight="1">
			<TextView android:layout_width="fill_parent"
				android:layout_weight="1" android:layout_height="wrap_content"
				android:text="Local Date:" />
			<View android:layout_height="fill_parent" android:background="#FF000000"
				android:layout_width="5dip" />
			<TextView android:layout_width="fill_parent"
				android:layout_weight="1" android:layout_height="wrap_content"
				android:text="Local Time:" />
		</LinearLayout>

	</TableRow>

	<TableRow android:paddingTop="5dip" android:paddingBottom="5dip">
		<LinearLayout android:layout_width="fill_parent"
			android:gravity="fill_vertical" android:layout_height="fill_parent"
			android:layout_weight="1">
			<TextView android:id="@+id/pDateText" android:background="@color/background_color2"
				android:layout_weight="1" android:layout_width="fill_parent"
				android:layout_height="40dip" android:text="12/19/2010"
				android:textColor="@color/text_color" android:gravity="center"
				android:textSize="22sp" />
			<View android:layout_height="fill_parent" android:background="#FF000000"
				android:layout_width="5dip" />
			<TextView android:id="@+id/pTimeText" android:background="@color/background_color2"
				android:layout_weight="1" android:layout_width="fill_parent"
				android:layout_height="40dip" android:text="11:07"
				android:textColor="@color/text_color" android:gravity="center"
				android:textSize="22sp" />
		</LinearLayout>
	</TableRow>

	<TableRow android:layout_width="wrap_content"
		android:layout_height="wrap_content">
		<TextView android:id="@+id/dataText" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="Right Ascension:" />
	</TableRow>

	<TableRow android:paddingTop="5dip" android:paddingBottom="5dip">
		<TextView android:id="@+id/pRAText" android:textSize="26sp"
			android:layout_weight="1" android:layout_width="wrap_content"
			android:layout_height="40dip" android:gravity="center"
			android:background="@color/background_color" android:textColor="@color/text_color" />
	</TableRow>

	<TableRow android:layout_width="wrap_content"
		android:layout_height="wrap_content">
		<TextView android:id="@+id/dataText" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="Declination:" />
	</TableRow>

	<TableRow android:paddingTop="5dip" android:paddingBottom="5dip">
		<TextView android:id="@+id/pDecText" android:textSize="26sp"
			android:layout_weight="1" android:layout_width="wrap_content"
			android:layout_height="40dip" android:gravity="center"
			android:background="@color/background_color" android:textColor="@color/text_color" />
	</TableRow>

	<TableRow android:layout_width="wrap_content"
		android:layout_height="wrap_content">
		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="fill_parent" android:layout_weight="1">
			<TextView android:layout_width="fill_parent"
				android:layout_weight="1" android:layout_height="wrap_content"
				android:text="Azimuth:" />
			<View android:layout_height="fill_parent" android:background="#FF000000"
				android:layout_width="5dip" />
			<TextView android:layout_width="fill_parent"
				android:layout_weight="1" android:layout_height="wrap_content"
				android:text="Altitude:" />
		</LinearLayout>
	</TableRow>

	<TableRow android:paddingTop="5dip" android:paddingBottom="5dip">
		<LinearLayout android:layout_width="fill_parent"
			android:gravity="fill_vertical" android:layout_height="fill_parent"
			android:layout_weight="1">
			<TextView android:id="@+id/pAzText" android:background="@color/background_color"
				android:layout_weight="1" android:layout_width="fill_parent"
				android:layout_height="40dip" android:textColor="@color/text_color"
				android:gravity="center" android:textSize="30sp" />
			<View android:layout_height="fill_parent" android:background="#FF000000"
				android:layout_width="5dip" />
			<TextView android:id="@+id/pAltText" android:background="@color/background_color"
				android:layout_weight="1" android:layout_width="fill_parent"
				android:layout_height="40dip" android:textColor="@color/text_color"
				android:gravity="center" android:textSize="30sp" />
		</LinearLayout>
	</TableRow>

	<TableRow android:layout_width="wrap_content"
		android:layout_height="wrap_content">
		<TextView android:id="@+id/dataText" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="Distance:" />
	</TableRow>

	<TableRow android:paddingTop="5dip" android:paddingBottom="5dip">
		<TextView android:id="@+id/pDistText" android:textSize="26sp"
			android:layout_weight="1" android:layout_width="wrap_content"
			android:layout_height="40dip" android:gravity="center"
			android:background="@color/background_color" android:textColor="@color/text_color" />
	</TableRow>

	<View android:layout_height="5dip" android:layout_width="fill_parent" />

	<TableRow android:paddingTop="5dip" android:paddingBottom="5dip">
		<TextView android:id="@+id/pBelowText" android:textSize="16sp"
			android:layout_weight="1" android:layout_width="wrap_content"
			android:layout_height="40dip" android:gravity="center"
			android:textColor="@color/alert_color" android:text="Object is below the horizon"
			android:visibility="invisible" />
	</TableRow>

	<TableRow>
		<TextView android:id="@+id/pTap" android:textSize="12sp"
			android:layout_weight="1" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:gravity="center"
			android:text="Tap on planet, date, or time fields to change the value" />
	</TableRow>

</TableLayout>
