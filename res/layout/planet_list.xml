<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="wrap_content">
	<TextView android:layout_width="fill_parent"
		android:background="@color/list_color" android:layout_weight="1"
		android:textColor="@color/text_color" android:textSize="21sp"
		android:gravity="center_horizontal" android:layout_height="wrap_content"
		android:text="What's Up Now" />
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:layout_weight="1">
		<TextView android:layout_width="fill_parent"
			android:textSize="18sp" android:paddingLeft="5dip" android:textColor="@color/text_color"
			android:background="@color/list_color" android:layout_weight="1"
			android:layout_height="wrap_content" android:text="Name" />
		<TextView android:layout_width="fill_parent"
			android:textSize="18sp" android:textColor="@color/text_color"
			android:background="@color/list_color" android:layout_weight="1"
			android:layout_height="wrap_content" android:text="Azimuth"
			android:gravity="center_horizontal" />
		<TextView android:layout_width="fill_parent"
			android:textSize="18sp" android:textColor="@color/text_color"
			android:background="@color/list_color" android:layout_weight="1"
			android:layout_height="wrap_content" android:text="Altitude"
			android:gravity="center_horizontal" />
	</LinearLayout>

	<ListView android:id="@+id/android:list" android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:textColor="@color/text_color" />
	<TextView android:id="@+id/android:empty" android:padding="5dip"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:textSize="18sp" android:text="@string/no_planets"
		android:textColor="@color/text_color" />

	<TextView android:id="@+id/pTap" android:textSize="12sp"
		android:layout_weight="1" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:gravity="center_horizontal"
		android:text="Select a planet to view its position data" />
</LinearLayout>
