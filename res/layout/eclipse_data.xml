<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_alignParentLeft="true"
	android:background="@color/planet_back_color"
	android:id="@+id/scrollView1"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content">
	<RelativeLayout
		android:id="@+id/relativeLayout1"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<TextView
			android:id="@+id/ecl_date_text"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:background="@color/planet_back_color"
			android:gravity="center"
			android:text="27 Sept 2011"
			android:textColor="@color/text_color"
			android:textSize="@dimen/pos_planet_name2" />
		<View
			android:id="@+id/view0"
			android:layout_below="@+id/ecl_date_text"
			android:layout_width="fill_parent"
			android:layout_height="5dp" />
		<TextView
			android:id="@+id/ecl_type_text"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_below="@+id/view0"
			android:gravity="center"
			android:background="@color/planet_back_color"
			android:textColor="@color/text_color"
			android:text="Total Eclipse"
			android:textSize="@dimen/pos_planet_name2" />
		<View
			android:id="@+id/view1"
			android:layout_below="@+id/ecl_type_text"
			android:layout_width="fill_parent"
			android:layout_height="10dp" />
		<TextView
			android:id="@+id/ecl_globalData"
			android:layout_below="@+id/view1"
			android:layout_height="wrap_content"
			android:layout_width="fill_parent"
			android:gravity="center"
			android:text="Eclipse Data (UTC)"
			android:textColor="@color/text_color"
			android:typeface="monospace" />
		<View
			android:id="@+id/view2"
			android:layout_below="@+id/ecl_globalData"
			android:layout_width="fill_parent"
			android:layout_height="10dp" />
		<TextView
			android:id="@+id/ecl_localData"
			android:layout_below="@+id/view2"
			android:layout_height="wrap_content"
			android:layout_width="fill_parent"
			android:gravity="center"
			android:text="Local Eclipse Data"
			android:textColor="@color/text_color"
			android:typeface="monospace" />
	</RelativeLayout>
</ScrollView>
