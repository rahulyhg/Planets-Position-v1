<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="wrap_content">

	<TextView android:text="@string/alert_message" android:id="@+id/textMessage"
		android:textColor="#FFFFFFFF" android:gravity="center_horizontal"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:textSize="16sp"></TextView>

	<LinearLayout android:layout_width="match_parent"
		android:layout_height="wrap_content" android:id="@+id/linearLayout1"
		android:layout_weight="1" android:gravity="fill_vertical">
		<Button android:text="@string/alert_enable" android:id="@+id/buttonWifi"
			android:layout_weight="1" android:layout_width="fill_parent"
			android:layout_height="wrap_content"></Button>
		<Button android:text="Continue" android:id="@+id/buttonContinue"
			android:layout_weight="1" android:layout_width="fill_parent"
			android:layout_height="53dip"></Button>
	</LinearLayout>
</LinearLayout>
