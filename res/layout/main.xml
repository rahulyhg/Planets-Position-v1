<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:gravity="center_horizontal">

	<View
		android:layout_height="50dp"
		android:layout_width="fill_parent" />

	<Button
		android:id="@+id/positionButton"
		android:text="Planet's Position"
		android:textSize="@dimen/pos_planet_name"
		android:layout_width="250dp"
		android:layout_height="50dp" />

	<Button
		android:id="@+id/whatupButton"
		android:text="What's Up Now"
		android:textSize="@dimen/pos_planet_name"
		android:layout_width="250dp"
		android:layout_height="50dp" />

	<View
		android:layout_height="20dp"
		android:layout_width="fill_parent" />

	<TextView
		android:text="Real Time Position"
		android:textSize="14sp"
		android:id="@+id/textView1"
		android:layout_width="250dp"
		android:layout_height="wrap_content" />

	<LinearLayout
		android:id="@+id/LinearLayout01"
		android:layout_width="250dp"
		android:layout_height="wrap_content">
		<Spinner
			android:layout_height="wrap_content"
			android:id="@+id/planetSpin"
			android:layout_width="fill_parent"
			android:layout_weight="1" />
		<Button
			android:id="@+id/goButton"
			android:text="GO"
			android:textSize="16sp"
			android:layout_width="fill_parent"
			android:layout_height="50dp"
			android:layout_weight="2" />
	</LinearLayout>

	<View
		android:layout_height="20dp"
		android:layout_width="fill_parent" />

	<LinearLayout
		android:id="@+id/LinearLayout01"
		android:layout_width="250dp"
		android:layout_height="wrap_content">
		<Button
			android:id="@+id/downloadButton"
			android:text="Download Location Data"
			android:layout_width="fill_parent"
			android:layout_height="60dp"
			android:layout_weight="1" />
		<Button
			android:id="@+id/manualEnterButton"
			android:text="Manually Enter Location Data"
			android:layout_width="fill_parent"
			android:layout_height="60dp"
			android:layout_weight="1" />
	</LinearLayout>

	<TextView
		android:id="@+id/locationData"
		android:background="@color/location_back"
		android:textColor="@color/text_color"
		android:layout_width="240dp"
		android:layout_height="wrap_content"
		android:lines="4"
		android:textSize="14sp"
		android:padding="5dp" />

</LinearLayout>
