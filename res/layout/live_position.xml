<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:background="@color/planet_back_color" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="5dp" >

        <TextView
            android:id="@+id/count_name_text"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:background="@color/planet_back_color"
            android:gravity="center"
            android:padding="4dp"
            android:textColor="@color/text_color"
            android:textSize="@dimen/pos_planet_name2" />

        <View
            android:id="@+id/view0"
            android:layout_width="fill_parent"
            android:layout_height="5dp"
            android:layout_below="@+id/count_name_text" />

        <TextView
            android:id="@+id/count_date_text"
            android:layout_width="@dimen/pos_text_width"
            android:layout_height="45dp"
            android:layout_alignLeft="@+id/view0"
            android:layout_below="@+id/view0"
            android:background="@color/planet_back_color"
            android:gravity="center"
            android:padding="4dp"
            android:textColor="@color/text_color"
            android:textSize="@dimen/pos_planet_name" />

        <TextView
            android:id="@+id/count_time_text"
            android:layout_width="@dimen/pos_text_width"
            android:layout_height="45dp"
            android:layout_alignRight="@+id/view0"
            android:layout_below="@+id/view0"
            android:background="@color/planet_back_color"
            android:gravity="center"
            android:padding="4dp"
            android:textColor="@color/text_color"
            android:textSize="@dimen/pos_planet_name" />

        <View
            android:id="@+id/view1"
            android:layout_width="fill_parent"
            android:layout_height="15dp"
            android:layout_below="@+id/count_date_text" />

        <TextView
            android:id="@+id/count_ra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/view1"
            android:layout_below="@+id/view1"
            android:background="@color/planet_back_color"
            android:padding="@dimen/pos_data_pad"
            android:text="Right Ascension"
            android:textColor="@color/text_color"
            android:textSize="@dimen/pos_data_text" />

        <TextView
            android:id="@+id/count_ra_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/view1"
            android:layout_below="@+id/view1"
            android:background="@color/planet_back_color"
            android:gravity="right"
            android:padding="@dimen/pos_data_pad"
            android:textColor="@color/text_color"
            android:textSize="@dimen/pos_data_text" />

        <View
            android:id="@+id/view2"
            android:layout_width="fill_parent"
            android:layout_height="5dp"
            android:layout_below="@+id/count_ra" />

        <TextView
            android:id="@+id/count_dec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/view2"
            android:layout_below="@+id/view2"
            android:background="@color/planet_back_color"
            android:padding="@dimen/pos_data_pad"
            android:text="Declination"
            android:textColor="@color/text_color"
            android:textSize="@dimen/pos_data_text" />

        <TextView
            android:id="@+id/count_dec_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/view2"
            android:layout_below="@+id/view2"
            android:background="@color/planet_back_color"
            android:gravity="right"
            android:padding="@dimen/pos_data_pad"
            android:textColor="@color/text_color"
            android:textSize="@dimen/pos_data_text" />

        <View
            android:id="@+id/view3"
            android:layout_width="fill_parent"
            android:layout_height="5dp"
            android:layout_below="@+id/count_dec" />

        <TextView
            android:id="@+id/count_az"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/view3"
            android:layout_below="@+id/view3"
            android:background="@color/planet_back_color"
            android:padding="@dimen/pos_data_pad"
            android:text="Azimuth"
            android:textColor="@color/text_color"
            android:textSize="@dimen/pos_data_text" />

        <TextView
            android:id="@+id/count_az_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/view3"
            android:layout_below="@+id/view3"
            android:background="@color/planet_back_color"
            android:gravity="right"
            android:padding="@dimen/pos_data_pad"
            android:textColor="@color/text_color"
            android:textSize="@dimen/pos_data_text" />

        <View
            android:id="@+id/view4"
            android:layout_width="fill_parent"
            android:layout_height="5dp"
            android:layout_below="@+id/count_az" />

        <TextView
            android:id="@+id/count_alt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/view4"
            android:layout_below="@+id/view4"
            android:background="@color/planet_back_color"
            android:padding="@dimen/pos_data_pad"
            android:text="Altitude"
            android:textColor="@color/text_color"
            android:textSize="@dimen/pos_data_text" />

        <TextView
            android:id="@+id/count_alt_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/view4"
            android:layout_below="@+id/view4"
            android:background="@color/planet_back_color"
            android:gravity="right"
            android:padding="@dimen/pos_data_pad"
            android:textColor="@color/text_color"
            android:textSize="@dimen/pos_data_text" />

        <View
            android:id="@+id/view5"
            android:layout_width="fill_parent"
            android:layout_height="5dp"
            android:layout_below="@+id/count_alt" />

        <TextView
            android:id="@+id/count_dis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/view5"
            android:layout_below="@+id/view5"
            android:background="@color/planet_back_color"
            android:padding="@dimen/pos_data_pad"
            android:text="Distance"
            android:textColor="@color/text_color"
            android:textSize="@dimen/pos_data_text" />

        <TextView
            android:id="@+id/count_dis_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/view5"
            android:layout_below="@+id/view5"
            android:background="@color/planet_back_color"
            android:gravity="right"
            android:padding="@dimen/pos_data_pad"
            android:textColor="@color/text_color"
            android:textSize="@dimen/pos_data_text" />

        <View
            android:id="@+id/view6"
            android:layout_width="fill_parent"
            android:layout_height="5dp"
            android:layout_below="@+id/count_dis" />

        <TextView
            android:id="@+id/count_mag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/view6"
            android:layout_below="@+id/view6"
            android:background="@color/planet_back_color"
            android:padding="@dimen/pos_data_pad"
            android:text="Magnitude"
            android:textColor="@color/text_color"
            android:textSize="@dimen/pos_data_text" />

        <TextView
            android:id="@+id/count_mag_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/view6"
            android:layout_below="@+id/view6"
            android:background="@color/planet_back_color"
            android:gravity="right"
            android:padding="@dimen/pos_data_pad"
            android:textColor="@color/text_color"
            android:textSize="@dimen/pos_data_text" />

        <View
            android:id="@+id/view7"
            android:layout_width="fill_parent"
            android:layout_height="5dp"
            android:layout_below="@+id/count_mag" />

        <TextView
            android:id="@+id/count_riseTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/view7"
            android:layout_below="@+id/view7"
            android:background="@color/planet_back_color"
            android:padding="@dimen/pos_data_pad"
            android:text="Rise/Set Time"
            android:textColor="@color/text_color"
            android:textSize="@dimen/pos_data_text" />

        <TextView
            android:id="@+id/count_riseTime_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/view7"
            android:layout_below="@+id/view7"
            android:background="@color/planet_back_color"
            android:gravity="right"
            android:padding="@dimen/pos_data_pad"
            android:textColor="@color/text_color"
            android:textSize="@dimen/pos_data_text" />

        <View
            android:id="@+id/view8"
            android:layout_width="fill_parent"
            android:layout_height="5dp"
            android:layout_below="@+id/count_riseTime" />

        <TextView
            android:id="@+id/count_setTime_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/view8"
            android:layout_below="@+id/view8"
            android:background="@color/planet_back_color"
            android:gravity="center_horizontal"
            android:padding="@dimen/pos_data_pad"
            android:text="16:24:35"
            android:textColor="@color/text_color"
            android:textSize="@dimen/pos_data_text" />
    </RelativeLayout>

</ScrollView>