<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="16dp" >

        <TextView
            android:id="@+id/title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/loc_enter"
            android:textColor="@color/text_color"
            android:textSize="32sp" />

        <View
            android:id="@+id/view01"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/title"
            android:background="@color/text_color" />

        <TextView
            android:id="@+id/text01"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view01"
            android:text="@string/loc_lat"
            android:textColor="@color/text_color"
            android:textSize="@dimen/label_text_xxxlarge" />

        <EditText
            android:id="@+id/newLatText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text01"
            android:inputType="numberSigned|numberDecimal"
            android:textSize="@dimen/label_text_xxxlarge" />

        <RadioGroup
            android:id="@+id/radioGroup1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/newLatText"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/radioLatNorth"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:checked="true"
                android:text="@string/loc_north"
                android:textSize="@dimen/label_text_xxxlarge" />

            <RadioButton
                android:id="@+id/radioLatSouth"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="@string/loc_south"
                android:textSize="@dimen/label_text_xxxlarge" />
        </RadioGroup>

        <TextView
            android:id="@+id/text02"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/radioGroup1"
            android:text="@string/loc_lng"
            android:textColor="@color/text_color"
            android:textSize="@dimen/label_text_xxxlarge" />

        <EditText
            android:id="@+id/newLongText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text02"
            android:inputType="numberSigned|numberDecimal"
            android:textSize="@dimen/label_text_xxxlarge" />

        <RadioGroup
            android:id="@+id/radioGroup2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/newLongText"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/radioLngEast"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:checked="true"
                android:text="@string/loc_east"
                android:textSize="@dimen/label_text_xxxlarge" />

            <RadioButton
                android:id="@+id/radioLngWest"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="@string/loc_west"
                android:textSize="@dimen/label_text_xxxlarge" />
        </RadioGroup>

        <View
            android:id="@+id/view02"
            android:layout_width="fill_parent"
            android:layout_height="5dp"
            android:layout_below="@+id/radioGroup2" />

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view02" >

            <TextView
                android:id="@+id/text03"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="0.5"
                android:gravity="center_vertical"
                android:text="@string/loc_ele"
                android:textColor="@color/text_color"
                android:textSize="@dimen/label_text_xxxlarge" />

            <EditText
                android:id="@+id/newElevationText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="center"
                android:inputType="numberSigned|numberDecimal"
                android:textSize="@dimen/label_text_xxxlarge" />
        </LinearLayout>

        <View
            android:id="@+id/view04"
            android:layout_width="fill_parent"
            android:layout_height="5dp"
            android:layout_below="@+id/linearLayout1" />

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view04" >

            <TextView
                android:id="@+id/text04"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="0.5"
                android:gravity="center_vertical"
                android:text="@string/loc_gmt"
                android:textColor="@color/text_color"
                android:textSize="@dimen/label_text_xxxlarge" />

            <Button
                android:id="@+id/offsetButton"
                style="@style/ButtonText_large"
                android:layout_weight="0.5"
                android:background="@drawable/btn_blue" />
        </LinearLayout>

        <View
            android:id="@+id/view03"
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:layout_below="@+id/linearLayout2" />

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view03" >

            <!--
                 <ImageButton
                android:id="@+id/gpsButton"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="0.65"
                android:background="@drawable/btn_blue"
                android:contentDescription="@string/loc_down"
                android:src="@drawable/statsysgpson" />
            -->

            <Button
                android:id="@+id/gpsButton"
                style="@style/ButtonText_xlarge"
                android:layout_weight="0.65"
                android:background="@drawable/btn_blue"
                android:text="@string/loc_down" />

            <Button
                android:id="@+id/saveLocButton"
                style="@style/ButtonText_xlarge"
                android:layout_weight="0.35"
                android:background="@drawable/btn_blue"
                android:text="@string/save" />
        </LinearLayout>
    </RelativeLayout>

</ScrollView>