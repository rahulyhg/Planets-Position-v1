<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:state_pressed="true">
        <shape>
            <solid android:color="#A00000" />

            <stroke
                android:width="1dp"
                android:color="#700000" />

            <corners android:radius="10dp" />

            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:angle="270"
                android:endColor="#400000"
                android:startColor="#600000" />

            <stroke
                android:width="1dp"
                android:color="#700000" />

            <corners android:radius="10dp" />

            <padding
                android:bottom="5dp"
                android:left="5dp"
                android:right="5dp"
                android:top="5dp" />
        </shape>
    </item>

</selector>